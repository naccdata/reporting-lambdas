# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your lambda

aws_region = "us-east-1"

lambda_name = "my-reporting-lambda"

# Path to the built lambda package (update after building with Pants)
lambda_package_path = "dist/lambda/my-lambda/src/python/my_lambda_lambda/lambda.zip"

# Lambda layers (update with actual layer ARNs after building)
lambda_layers = [
  "arn:aws:lambda:us-east-1:123456789012:layer:powertools:1",
  "arn:aws:lambda:us-east-1:123456789012:layer:data_processing:1"
]

# S3 bucket configuration
input_bucket_name = "my-input-bucket"
input_bucket_arn  = "arn:aws:s3:::my-input-bucket"
output_bucket_name = "my-output-bucket"
output_bucket_arn  = "arn:aws:s3:::my-output-bucket"
output_prefix      = "processed-data/"

# Lambda configuration
timeout     = 900    # 15 minutes
memory_size = 3008   # ~3GB
log_level   = "INFO"

# Optional: Schedule for periodic execution
# schedule_expression = "rate(1 hour)"
# schedule_expression = "cron(0 12 * * ? *)"  # Daily at noon UTC
schedule_expression = ""